<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/usericon"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:onClick="UserProfile"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/orderprocessing" />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Please Wait While We Are Processing Your Request Do Not Close Or Press Back Button"
       android:textAlignment="center"
       android:textColor="#DE1325"
       android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Will Be Automatically Redirected"
        android:textAlignment="center"
        android:textColor="#18C399"
        android:textSize="20sp"/>
</LinearLayout>
