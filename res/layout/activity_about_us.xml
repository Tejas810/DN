<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutusbackground"
    tools:context=".AboutUs"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/curve_background"
            android:elevation="100dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Meet Our Team"
                android:textColor="#B6664B"
                android:textSize="33sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_margin="14dp"
            android:background="#fff"
            app:cardCornerRadius="15dp"
            app:cardElevation="100dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="250dp"
                android:text="Nauman Pathan"
                android:textColor="#000"
                android:textSize="24sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="280dp"
                android:text="Team Lead"
                android:textColor="#988CBD"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/GithubNauman"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="60dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/githubicon"
                    />
                <ImageButton
                    android:id="@+id/TelegramNauman"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/telegramicon"
                    />
                <ImageButton
                    android:id="@+id/LinkedinNauman"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/linkedinicon"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_margin="14dp"
            android:background="#fff"
            app:cardCornerRadius="15dp"
            app:cardElevation="100dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/tejasimage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="250dp"
                android:text="Tejas Kulkarni"
                android:textColor="#000"
                android:textSize="24sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="280dp"
                android:text="Senior Developer"
                android:textColor="#988CBD"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/GithubTejas"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="60dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/githubicon"
                    />
                <ImageButton
                    android:id="@+id/TelegramTejas"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/telegramicon"
                    />
                <ImageButton
                    android:id="@+id/LinkedinTejas"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/linkedinicon"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_margin="14dp"
            android:background="#fff"
            app:cardCornerRadius="15dp"
            app:cardElevation="100dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/kshitijimage"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="280dp"
                android:text="Junior Developer"
                android:textColor="#988CBD"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/GithubKshitij"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="60dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/githubicon"
                    />
                <ImageButton
                    android:id="@+id/TelegramKshitij"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/telegramicon"
                    />
                <ImageButton
                    android:id="@+id/LinkedinKshitij"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/linkedinicon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="250dp"
                    android:text="Kshitij Ghodake"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:orientation="vertical"
            app:cardElevation="100dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/copyrightsymbol"
                android:drawablePadding="5dp"
                android:text="DeliveryNest , 2023 "
                android:textColor="#000"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>